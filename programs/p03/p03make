#-------------------------------------------------------------------------
# File p03make creates executable file p03.
#-------------------------------------------------------------------------
# Author: Thomas R. Turner
# E-Mail: tturner@ucok.edu
# Date:   September, 2002
#-------------------------------------------------------------------------
#object files
#-------------------------------------------------------------------------
obj	=	p03.o Scan03.o Stack03.o
#-------------------------------------------------------------------------
# Bind p03.o, Scan03.o and Stack03.o
#-------------------------------------------------------------------------
p03:		${obj}	
		g++ -o p03 ${obj} -ll
#-------------------------------------------------------------------------
# Compile p03.cpp
#-------------------------------------------------------------------------
p03.o:		p03.cpp Scan03.h Stack03.h
		g++ -g -c p03.cpp
#-------------------------------------------------------------------------
# Compile Scan03.l. First translate the lex specification, then compile
#-------------------------------------------------------------------------
Scan03.o:	Scan03.cpp Scan03.h
		g++ -g -c Scan03.cpp
Scan03.cpp:	Scan03.l Scan03.h
		lex Scan03.l
		mv lex.yy.c Scan03.cpp
#-------------------------------------------------------------------------
# Compile Stack03.cpp
#-------------------------------------------------------------------------
Stack03.o:	Stack03.cpp Stack03.h
		g++ -g -c Stack03.cpp